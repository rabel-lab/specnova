{
  "type": "module",
  "name": "@rabel-lab/specnova",
  "private": false,
  "version": "0.0.1",
  "description": "Core library for generating TypeScript SDKs from OpenAPI specs, managing patches, versions, and automation scripts.",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist/lib",
    "dist/bin"
  ],
  "bin": {
    "specnova": "dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.cjs"
    },
    "./config": {
      "import": "./dist/lib/config/index.js",
      "require": "./dist/lib/config/index.cjs"
    },
    "./adapters": {
      "import": "./dist/lib/config/adapters/index.js",
      "require": "./dist/lib/config/adapters/index.cjs"
    },
    "./errors": {
      "import": "./dist/lib/errors/index.js",
      "require": "./dist/lib/errors/index.cjs"
    },
    "./tasks": {
      "import": "./dist/lib/tasks/index.js",
      "require": "./dist/lib/tasks/index.cjs"
    }
  },
  "specnova": {
    "source": "https://raw.githubusercontent.com/OAI/learn.openapis.org/refs/heads/main/examples/v3.0/api-with-examples.json",
    "branch": {
      "target": ".snapshots/2.0.0/meta.json"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch & pnpm typesafe-i18n",
    "ci:ck": "openapi-gen ci-check",
    "ci:up": "openapi-gen ci-update",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "play": "pnpm build && node dist/dev/playground.dev.config.js",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@internal/specnova-eslint-config": "workspace:*",
    "@types/node": "^20.19.25",
    "@types/semver": "^7.7.1",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@swagger-api/apidom-ast": "1.0.0-rc.4",
    "@swagger-api/apidom-core": "1.0.0-rc.4",
    "@swagger-api/apidom-error": "1.0.0-rc.4",
    "@swagger-api/apidom-json-path": "1.0.0-rc.4",
    "@swagger-api/apidom-json-pointer": "1.0.0-rc.4",
    "@swagger-api/apidom-json-pointer-relative": "1.0.0-rc.4",
    "@swagger-api/apidom-ls": "1.0.0-rc.4",
    "@swagger-api/apidom-ns-openapi-2": "1.0.0-rc.4",
    "@swagger-api/apidom-ns-openapi-3-0": "1.0.0-rc.4",
    "@swagger-api/apidom-ns-openapi-3-1": "1.0.0-rc.4",
    "@swagger-api/apidom-parser": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-json": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-json-2": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-json-3-0": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-json-3-1": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-yaml-2": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-yaml-3-0": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-openapi-yaml-3-1": "1.0.0-rc.4",
    "@swagger-api/apidom-parser-adapter-yaml-1-2": "1.0.0-rc.4",
    "@swagger-api/apidom-reference": "1.0.0-rc.4",
    "boxen": "^8.0.1",
    "c12": "^3.3.2",
    "chalk": "^5.6.2",
    "cli-spinners": "^3.3.0",
    "commander": "^11.1.0",
    "node-emoji": "^2.2.0",
    "pino": "^10.1.0",
    "semver": "^7.7.3",
    "typesafe-i18n": "^5.26.2",
    "zod": "^4.2.1"
  },
  "packageManager": "pnpm@10.19.0"
}